.seat-area {
  position: relative;
  background-color: #F0F0F0;
  padding-bottom: 30rpx;
}

.seat-title {
  height: 80rpx;
  text-align: center;
  font-size: 30rpx;
  line-height: 80rpx;
  background-color: #DCDCDC;
  border-radius: 0 0 20rpx 20rpx;
  width: 750rpx;
}

.row {
  position: absolute;
  left: 10rpx;
  top: 320rpx;
  z-index: 9;
  display: flex;
  flex-direction: column;
  color: #fff;
  background-color: rgba(0, 0, 0, .2);
  border-radius: 15rpx;
  font-size: 20rpx;
  width: 30rpx;
  padding: 10rpx 0;
}

.row text {
  width: 24rpx;
  height: 20rpx;
  text-align: center;
  line-height: 20rpx;
  padding: 5rpx 0;
}

