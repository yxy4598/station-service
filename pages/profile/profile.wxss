/* pages/profile/profile.wxss */

.info {
  height: 200rpx;
  border-bottom: 30rpx solid #f6f6f6;
  display: flex;
  align-items: center;
}

.user-info {
  margin-left: 50rpx;
  display: flex;
  align-items: center;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
}
.userinfo-avatar>image {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
}

.userinfo-name {
  margin-left: 40rpx;
  height: 200rpx;
  line-height: 100rpx;
}

.pass-info {
  line-height: 50rpx;
  font-size: 24rpx;
  color: #9D9D9D;
}

.login{
  font-size: 36rpx;
  color: #1296db;
  margin-left: 30rpx;
}

.login>text {
  font-size: 28rpx;
  color: #9D9D9D;
}


.repast>view {
  height: 150rpx;
}
